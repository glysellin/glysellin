.cart-addresses
  %h4= t("glysellin.labels.cart.informations")

  .billing-address{:style => "float:left;width:200px;"}
    %h5= t("glysellin.labels.order.billing_address")
    = render partial: "glysellin/shared/address", locals: { address: cart.billing_address }

  .shipping-address{:style => "float:left;width:200px;"}
    %h5= t("glysellin.labels.order.shipping_address")
    - address = (cart.use_another_address_for_shipping ? cart.shipping_address : cart.billing_address)
    = render partial: "glysellin/shared/address", locals: { address: address }

  .clearfix

