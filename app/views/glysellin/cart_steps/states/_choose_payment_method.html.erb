<h2><%= t('glysellin.labels.forms.choose_payment_method') %></h2>

<%= simple_form_for cart, as: :cart, url: cart_payment_method_path, method: "put" do |f| %>
  <%= f.fields_for :payments, [(cart.payments.first || cart.payments.build)] do |fp| %>
    <%= fp.input :payment_method_id do %>
      <% Glysellin::PaymentMethod.ordered.each do |payment_method| %>
        <label class="radio">
          <%= fp.radio_button :payment_method_id, payment_method.id %>
          <%= payment_method.name %>
        </label>
      <% end %>
    <% end %>
  <% end %>

  <%= f.button :submit, t('glysellin.labels.forms.confirm_payment_method') %>
<% end %>