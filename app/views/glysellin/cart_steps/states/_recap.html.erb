<%= render partial: "glysellin/cart/navigation", locals: { cart: current_cart } %>

<div class="row">
  <div class="col-md-12">
    <h2><%= t('glysellin.labels.forms.recap') %></h2>

    <%= render partial: "glysellin/cart/recap", locals: { cart: current_cart } %>

    <h2><%= t('glysellin.labels.forms.choose_payment_method') %></h2>

    <%= simple_form_for cart, as: :cart, url: cart_order_creation_path, method: "put" do |f| %>
      <%= f.fields_for :payments, [(cart.payments.first || cart.payments.build)] do |fp| %>
        <%= fp.input :payment_method_id do %>
          <% @payment_methods.each do |payment_method| %>
            <label class="radio">
              <%= fp.radio_button :payment_method_id, payment_method.id %>
              <%= payment_method.name %>
            </label>
          <% end %>
        <% end %>
      <% end %>

      <%= f.button :submit, t('glysellin.labels.forms.create_order') %>
      <%= link_to t("glysellin.labels.cart.cancel"), cart_path, method: "delete" %>
    <% end %>
  </div>
</div>
