<%= render partial: "navigation", locals: { cart: @cart } %>

<% ready = @cart.state_name == :ready %>

<% if @cart.state_index > 0 && !ready %>
  <%= render partial: "recap", locals: { cart: @cart } %>
<% end %>

<%= render partial: "glysellin/cart/states/#{ @cart.state }", locals: { cart: @cart } %>

<% unless ready %>
  <%= link_to t("glysellin.labels.cart.cancel"), cart_path, method: "delete" %>
<% end %>
